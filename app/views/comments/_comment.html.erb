<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-1 col-sm-2 col-xs-4">
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-11 col-sm-10 col-xs-8 comment-content">
          <div>
            <%= comment.content %>
          </div>
          <div class="comment-attr">
            Comment Posted By -<span class="comment-name" <%= comment.user.name %></span>
            <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
