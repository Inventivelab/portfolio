<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio.display_image, 'display'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h2><%= @portfolio.title %></h2>
      <em><%= @portfolio.subtitle %></em>
      <p><%= @portfolio.body %></p>
      <hr>
      <h2>Technologies Used</h2>
      <% @portfolio.technologies.each do |tech| %>
        <p><%= tech.name %></p>
      <% end %>
      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to "Edit", edit_portfolio_path(@portfolio), class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



