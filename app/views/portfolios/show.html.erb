<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio.display_image, width: '100%' %>
    </div>
    <div class="col-md-5">
      <h2><%= @portfolio.title %></h2>
      <em><%= @portfolio.subtitle %></em>
      <p><%= @portfolio.body %></p>
      <hr>
      <h2>Technologies Used</h2>
      <% @portfolio.technologies.each do |tech| %>
        <p><%= tech.name %></p>
      <% end %>

    </div>
  </div>
</div>



