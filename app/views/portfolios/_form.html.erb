<%= form_for(@portfolio) do |f| %>
  <% if portfolio.errors.any? %>
    <% portfolio.errors.full_messages.each do |e| %>
      <%= js add_gritter(e, :title => "Said Maadan", sticky: false) %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a display image<%= f.file_field :display_image, style: 'display:none;' %>
        </label>

      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a display image<%= f.file_field :thumb_image, style: 'display:none;' %>
        </label>

      </div>

    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: 15 %>
      </div>
    </div>
    <hr>
    <div class="col-md-12">
      <h2>Technologies Used:</h2>
      <div>
        <%= f.fields_for :technologies do |technology_form| %>
        <%= render  'technology_fields', f: technology_form %>
        <% end %>
        <div>
          <%= link_to_add_association 'Add Technology', f, :technologies %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
